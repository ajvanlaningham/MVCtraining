@model IEnumerable<MVCtraining.Models.ApplicationType>

<div class="containter p-3">
    <div class="row" pt-4">
        <div class="col-6</div>">
            <h2 class="text-primary">Application Types</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Application Type
            </a>
        </div>
     </div>

    <br /><br />

    @if(Model.Count() >0)
     {
        <table class="table table-bordered table-striped" style="width:100%">
            <thread>
                <tr>
                    <th>
                     Name
                    </th>
                    
                    <th></th>
                </tr>
            </thread>
            <tbody>
           @foreach(var obj in Model)
            {
            <tr>
                <td width="50%">@obj.Name</td>
                
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
            }
            </tbody>
        </table>
            }
            else
            {
                <p>Not Application Types exist</p>
            }
</div>
